                    <div class="img-opacity">
                        <img src="~/assets/img/instagramphoto/inst_3.png.webp" alt="">
                        <div class="social">
                            <a href="https://www.instagram.com/thewinterbrand/?hl=en">
                                <i class="fa-brands fa-instagram"></i>
                            </a>
                        </div>

                        <div class="owerlay">
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-12">
                    <div class="img-opacity">
                        <img src="~/assets/img/instagramphoto/inst_5.png.webp" alt="">
                        <div class="social">
                            <a href="https://www.instagram.com/thewinterbrand/?hl=en">
                                <i class="fa-brands fa-instagram"></i>
                            </a>
                        </div>

                        <div class="owerlay">
